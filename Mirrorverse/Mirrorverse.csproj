<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0" />
	  <PackageReference Include="Silk.NET.Direct3D.Compilers" Version="2.15.0" />
	  <PackageReference Include="Silk.NET.Input" Version="2.15.0" />
	  <PackageReference Include="Silk.NET.Windowing" Version="2.15.0" />
		<PackageReference Include="Silk.NET.Direct3D11" Version="2.15.0" />
		<PackageReference Include="Silk.NET.Maths" Version="2.15.0" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="Shaders\PixelShader.hlsl">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	  <None Update="SimpleShader.hlsl">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	  <None Update="Shaders\VertexShader.hlsl">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
